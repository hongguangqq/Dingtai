<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.jyt.baseapp.view.widget.NoScrollViewPager
        android:id="@+id/vp_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </com.jyt.baseapp.view.widget.NoScrollViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_b3">
    </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical"
        android:background="@color/color_b2">
        <LinearLayout
            android:id="@+id/ll_content_quotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_content_quotation"
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:src="@mipmap/quotation_on"/>
            <TextView
                android:id="@+id/tv_content_quotation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="行情"
                android:textColor="@color/color_o1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_content_transaction"
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:src="@mipmap/transaction_off"/>
            <TextView
                android:id="@+id/tv_content_transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="交易"
                android:textColor="@color/color_b1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/iv_content_information"
                android:layout_width="22dp"
                android:layout_height="21dp"
                android:src="@mipmap/information_off"/>
            <TextView
                android:id="@+id/tv_content_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="资讯"
                android:textColor="@color/color_b1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>