<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_login">
    <ImageView
        android:id="@+id/iv_person_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:src="@mipmap/icon_back"/>
    <com.jyt.baseapp.view.widget.CircleImageView
        android:id="@+id/civ_person_headpic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:src="@mipmap/icon_head"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额："
            android:textSize="14dp"
            android:textColor="@color/color_g2"/>
        <TextView
            android:id="@+id/tv_person_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textSize="23dp"
            android:textColor="@color/color_red1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_person_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:textColor="@color/color_g2"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手续费"
                android:textSize="14dp"
                android:textColor="@color/color_b1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_person_assets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:textColor="@color/color_g2"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总资产"
                android:textSize="14dp"
                android:textColor="@color/color_b1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_person_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:textColor="@color/color_g2"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保证金"
                android:textSize="14dp"
                android:textColor="@color/color_b1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="52dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="79dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_person_transferEarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:textColor="@color/color_g2"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转让盈亏"
                android:textSize="14dp"
                android:textColor="@color/color_b1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="52dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_person_trueEarn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:textColor="@color/color_g2"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实际盈亏"
                android:textSize="14dp"
                android:textColor="@color/color_b1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="46dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="beginning|middle|end"
        android:divider="@drawable/line1">
        <RelativeLayout
            android:id="@+id/rl_person_binding"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="绑定银行"
                android:textSize="14dp"
                android:textColor="@color/color_b1"/>
            <TextView
                android:id="@+id/tv_person_bank"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="18dp"
                android:textColor="@color/color_g2"/>
            <com.jyt.baseapp.view.widget.CircleImageView
                android:id="@+id/civ_person_banklogo"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:layout_toLeftOf="@id/tv_person_bank"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fl_person_banknum"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="银行卡号"
                android:textSize="14dp"
                android:textColor="@color/color_b1"/>
            <TextView
                android:id="@+id/tv_person_banknum"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:text=""
                android:textSize="18dp"
                android:textColor="@color/color_g2"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_person_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="12dp"
        android:textColor="@color/color_b1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
