<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="225dp"
    android:layout_height="match_parent"
    app:cardElevation="30dp"
    app:cardMaxElevation="30dp"
    app:cardBackgroundColor="@color/color_b2">
    <LinearLayout
        android:id="@+id/ll_into_scroll"
        android:layout_width="225dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_b2">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_width="162dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="入金"
            android:textSize="16dp"
            android:textColor="@color/color_o1"
            android:background="@drawable/bg_input_off"/>

        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.jyt.baseapp.view.widget.GuaItem
                android:id="@+id/guaitem_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:msg="银行托管"
                app:title="转账方式"/>
            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#141414"/>

            <com.jyt.baseapp.view.widget.GuaItem
                android:id="@+id/guaitem_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:msg="----"
                app:title="选择银行"/>
            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#141414"/>

            <com.jyt.baseapp.view.widget.GuaItem
                android:id="@+id/guaitem_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:msg="人民币"
                app:title="选择币种"/>
            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#141414"/>
            <com.jyt.baseapp.view.widget.GuaItem
                android:id="@+id/guaitem_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="入金金额"
                app:input=""
                app:inputtype="0x00000002"
                app:isshow="false"/>
            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#141414"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录密码"
                android:textSize="12dp"
                android:textColor="@color/color_b1"/>

            <EditText
                android:id="@+id/et_pwd"
                android:inputType="textPassword"
                android:gravity="center"
                android:layout_width="90dp"
                android:textSize="14dp"
                android:textColor="@color/color_g2"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/bg_input_off"/>
        </LinearLayout>




        <Button
            android:id="@+id/btn_submit"
            android:layout_width="162dp"
            android:layout_height="32dp"
            android:layout_marginTop="35dp"
            android:text="入金"
            android:textColor="@color/color_b2"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_submit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="投资有风险\n\n入市需谨慎"
            android:layout_gravity="center_horizontal"
            android:textSize="11dp"
            android:textColor="@color/color_b1"/>
    </LinearLayout>

</android.support.v7.widget.CardView>