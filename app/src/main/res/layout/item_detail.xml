<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="10.5dp"
    android:background="@color/color_b3"
    android:paddingRight="2dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_detail_createdTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:15"
            android:gravity="center_vertical"
            android:textColor="@color/color_w1"
            android:textSize="8dp"/>

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_detail_price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="787:00"
                android:textColor="@color/red"
                android:textSize="8dp"/>

            <TextView
                android:id="@+id/tv_detail_num"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/tv_detail_price"
                android:text="1259"
                android:textColor="@color/yellow"
                android:textSize="8dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_detail_dealType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:text="转让"
            android:textColor="@color/color_w1"
            android:textSize="11dp"/>
    </RelativeLayout>
</LinearLayout>