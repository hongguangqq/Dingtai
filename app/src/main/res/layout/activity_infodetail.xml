<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/color_b3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@color/color_b2">
        <ImageView
            android:id="@+id/iv_infodetail_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@mipmap/icon_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品资讯"
            android:textSize="18dp"
            android:textColor="@color/color_o1"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:id="@+id/tv_infodetail_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西凤国花瓷52°"
            android:textSize="16dp"
            android:textColor="@color/color_g2"/>
        <TextView
            android:id="@+id/tv_infodetail_goodsCode"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/tv_infodetail_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(代码：30831)"
            android:textSize="11dp"
            android:textColor="@color/color_b1"/>
        <TextView
            android:id="@+id/tv_infodetail_updateTime"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-07-31 20:30"
            android:textSize="11dp"
            android:textColor="@color/color_b1"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_infodetail_goodsImg"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="192dp"/>
            <TextView
                android:id="@+id/tv_infodetail_goodsDesc"
                android:layout_marginTop="100dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:gravity="center"
                android:text=""
                android:textSize="13dp"
                android:textColor="@color/color_g2"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>