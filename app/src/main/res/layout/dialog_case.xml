<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="225dp"
    android:layout_height="match_parent"
    app:cardElevation="20dp"
    app:cardMaxElevation="20dp"
    app:cardBackgroundColor="@color/color_b2">
    <LinearLayout
        android:layout_width="225dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_b2">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_width="162dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="新增订立"
            android:textSize="16dp"
            android:textColor="@color/color_o1"
            android:background="@drawable/bg_input_off"/>

        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.jyt.baseapp.view.widget.GuaItem
                android:id="@+id/guaitem_code"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="商品代码"
                app:msg="38031"/>
            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#141414"/>
            <com.jyt.baseapp.view.widget.GuaItem
                android:id="@+id/guaitem_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="订立类型"
                app:msg="买入订立(涨)"/>
            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#141414"/>
            <com.jyt.baseapp.view.widget.GuaItem
                android:id="@+id/guaitem_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="交易价格"
                app:input=""
                app:inputtype="0x00000002"
                app:isshow="false"/>
            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#141414"/>
            <com.jyt.baseapp.view.widget.GuaItem
                android:id="@+id/guaitem_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="可用资金"
                app:input=""
                app:inputtype="0x00000002"
                app:isshow="false"/>
            <View
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#141414"/>
            <com.jyt.baseapp.view.widget.GuaItem
                android:id="@+id/guaitem_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="设置交易数"
                app:input=""
                app:inputtype="0x00000002"
                app:isshow="false"/>
            <TextView
                android:id="@+id/tv_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最大交易数:"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textSize="11dp"
                android:textColor="@color/color_b1"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="162dp"
            android:layout_height="32dp"
            android:layout_marginTop="50dp"
            android:text="订立"
            android:textColor="@color/color_b2"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_submit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="投资有风险\n\n入市需谨慎"
            android:layout_gravity="center_horizontal"
            android:textSize="11dp"
            android:textColor="@color/color_b1"/>
    </LinearLayout>

</android.support.v7.widget.CardView>