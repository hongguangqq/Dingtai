<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:background="@color/color_b2">
        <ImageView
            android:id="@+id/iv_transfer_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:src="@mipmap/icon_back"/>
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_transfer_tab"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabIndicatorColor="@color/color_o1"
            app:tabSelectedTextColor="@color/color_o1"
            app:tabTextColor="@color/color_b1"/>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_transfer_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">
    </android.support.v4.view.ViewPager>
</LinearLayout>